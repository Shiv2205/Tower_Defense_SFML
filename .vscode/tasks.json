{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "python3",
      "args": [
        "build.py"
       ],
      "group": "build",
      "presentation": {
        // Reveal the output only if unrecognized errors occur.
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "full build",
      "type": "shell",
      "command": "python3",
      "args": [
        "build.py",
        "build",
        "full"
       ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "run",
      "type": "shell",
      "command": "python3",
      "args": [
        "build.py",
        "run"
       ],
      "group": "none",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "dev",
      "type": "shell",
      "command": "python3",
      "args": [
        "build.py",
        "dev"
       ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "python3",
      "args": [
        "build.py",
        "clean"
       ],
      "group": "none",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    }
  ]
}